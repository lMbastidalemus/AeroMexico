@model ML.Usuarios
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="index.css">
    <title>HASH TECHIE OFFICIAL</title>
    <link href="~/Content/css/login.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-value">
                @using (Html.BeginForm("Login", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <form>
                        <h2>Login</h2>
                        <div class="inputbox">

                            @Html.TextBoxFor(model => model.Usuario, new { @type = "text" })
                            <label for="">Usuario</label>
                        </div>
                        <div class="inputbox">
                            <ion-icon name="lock-closed-outline"></ion-icon>

                            @Html.TextBoxFor(model => model.Password, new { @type = "password" })
                            <label for="">Password</label>

                        </div>

                        <button>Log in</button>

                       
                    </form>
                }
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>

