@model ML.Vuelos
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="margin-top:5rem; margin-bottom:5rem;margin-bottom:3rem">
    <h2>Busca tu vuelo!!</h2>
</div>
<div style="display: grid; grid-template-rows: repeat(2, 50px); ">
    <div>
        @using (Html.BeginForm("VuelosV", "Vuelos", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div style="display:flex; flex-direction:column; justify-content:space-between">
                <div class="col-md-6" style="margin-bottom:18rem">
                    @Html.LabelFor(model => model.FechaInicio)
                    <br />
                    @Html.TextBoxFor(model => model.FechaInicio, new { @class = "form-control", @type = "date", @with = "5rem" })
                </div>
                <div class="col-md-6" style="margin-bottom:7rem">
                    @Html.LabelFor(model => model.FechaSalida)
                    <br />
                    @Html.TextBoxFor(model => model.FechaSalida, new { @class = "form-control", @type = "date" })
                </div>
            </div>


            <div>
                <button class="btn btn-dark" type="submit" style="margin-bottom:2rem;margin-left:6rem">Buscar Vuelos</button>
            </div>
        }
    </div>
   
    <div style="display:flex;justify-content:center;margin-left:20rem;margin-top:0">
        <img  id="userLogo" height="300px" width="600px" src="https://logodownload.org/wp-content/uploads/2019/09/aeromexico-logo-0.png" >

    </div>
   
</div>




